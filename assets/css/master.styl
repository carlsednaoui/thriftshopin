@import '_settings'

normalize()
base()

#spin
  display: none
  height: 30px
  position: absolute

.toorich
  display: none
  line-height: 1.4em
  font-weight: 400
  opacity: .8

  a
    font-weight: 700
    color: #fff
    text-decoration: none
    transition()
    hover-underline()
    padding-bottom: 2px

header
  background: #ea4645
  color: #fff
  padding: 50px
  text-align: center

  h1
    font-weight: 300
    fs: 2.5em

  input
    text-align: center
    background: none
    border: none
    width: 110px
    font-family: Lato, sans-serif
    color: #1c1c1c
    font-weight: 700
    -webkit-font-smoothing: antialiased

    &:focus
      outline: 0

  .settings
    bg: 'settings.png'
    size: 24
    text-indent: -9999px
    display: block
    absolute: top 15px right 15px

// list shuffle plugin
ul[data-liffect="fadeIn"] li
    opacity: 0
    position: relative
    -webkit-animation: fadeIn 500ms ease both
    -webkit-animation-play-state: paused
    -moz-animation: fadeIn 500ms ease both
    -moz-animation-play-state: paused
    -o-animation: fadeIn 500ms ease both
    -o-animation-play-state: paused
    animation: fadeIn 500ms ease both
    animation-play-state: paused

ul[data-liffect="fadeIn"].play li
    -webkit-animation-play-state: running
    -moz-animation-play-state: running
    -o-animation-play-state: running
    animation-play-state: running

@keyframes fadeIn
  0%
    opacity: 0
  100%
    opacity: 1

